@page
@model Project.Pages.CleaningStaff.Cleaning_RequestsModel
@{
ViewData["CustomNavbar"] = "RoomSearch"; // Flag that a custom navbar is provided
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Management System - View Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>



    <!-- Main Content Section -->
    <div class="container mt-5">
        <h3 class="mb-4">Cleaning Requests</h3>

        <!-- Table to display requests -->
        <table class="table table-bordered">
            <thead class="table-success">
                <tr>
                    <th>Requests</th>
                    <th>Room ID</th>
                    <th>Time of Request</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Request 1</td>
                    <td>F004</td>
                    <td>12:00</td>
                </tr>
                <tr>
                    <td>Request 2</td>
                    <td>S004</td>
                    <td>04:00</td>
                </tr>
                <tr>
                    <td>Request 3</td>
                    <td>S013 d</td>
                    <td>11:00</td>
                </tr>
                <tr>
                    <td>Request 4</td>
                    <td>S010 e</td>
                    <td>13:00</td>
                </tr>
            </tbody>
        </table>

        <!-- Checking Progress Section -->
        <div class="mt-4">
            <h5>Checking progress</h5>
            <div class="d-flex align-items-center">
                <label for="roomSelect" class="me-2">Room</label>
                <select id="roomSelect" class="form-select w-25">
                    <option value="F004">F004</option>
                    <option value="S004">S004</option>
                </select>
                <button class="btn btn-primary ms-3">Mark as Done</button>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional for functionality like toggler) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
