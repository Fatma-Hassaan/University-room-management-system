}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Management System - Daily Cleaning</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>


<!-- Main Content Section -->
<div class="container mt-5">
    <h3 class="mb-4">Daily Cleaning</h3>

    <!-- Table to display room conditions -->
    <table class="table table-bordered">
        <thead class="table-success">
            <tr>
                <th>Room ID</th>
                <th>Condition</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>F004</td>
                <td>Done</td>
            </tr>
            <tr>
                <td>S004</td>
                <td>Done</td>
            </tr>
            <tr>
                <td>S013 d</td>
                <td>In Progress</td>
            </tr>
            <tr>
                <td>S010 e</td>
                <td>Undone</td>
            </tr>
        </tbody>
    </table>

    <!-- Room Condition Progress Section -->
    <div class="mt-4">
        <h5>Checking Progress</h5>
        <div class="d-flex align-items-center">
            <label for="roomSelect" class="me-2">Room</label>
            <select id="roomSelect" class="form-select w-25">
                <option value="F004">F004</option>
                <option value="S004">S004</option>
            </select>
            <label for="conditionSelect" class="ms-3 me-2">Condition</label>
            <select id="conditionSelect" class="form-select w-25">
                <option value="Undone">Undone</option>
                <option value="In Progress">In Progress</option>
                <option value="Done">Done</option>
            </select>
            <button class="btn btn-primary ms-3">Set</button>
        </div>
    </div>
</div>

<!-- Bootstrap JS (Ensure it's included right before closing the </body> tag) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom JavaScript to manually activate the dropdown -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var dropdownToggle = document.getElementById('navbarDropdown');
        var dropdownMenu = document.querySelector('.dropdown-menu');
        
        // Add a click event to toggle the dropdown
        dropdownToggle.addEventListener('click', function (event) {
            event.preventDefault();
            dropdownMenu.classList.toggle('show');
        });
    });
</script>

</body>
</html>
