@page
@model Pages.CleaningStaff.SuppliesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Supplies Request";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form method="post">
        <div class="form-group row mb-3">
            <label asp-for="Supplies" class="col-sm-3 col-form-label">Supplies</label>
            <div class="col-sm-4">
                <input asp-for="Supplies" class="form-control" />
                <span asp-validation-for="Supplies" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="ExpectedDeliveryTime" class="col-sm-3 col-form-label">
                Expected delivery time
            </label>
            <div class="col-sm-4">
                <input asp-for="ExpectedDeliveryTime"
                       type="datetime-local"
                       class="form-control" />
                <span asp-validation-for="ExpectedDeliveryTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-success btn-lg" disabled="@( !Model.CanSubmit ? "disabled" : null)">
                Request
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
