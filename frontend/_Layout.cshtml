<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    @if (!IsSectionDefined("HideNavBar"))
    {
    <header>
        <div class="logo-container">
            <a href="/">
                <img src="~/images/uni_logo.png" alt="Logo" class="logo" />
            </a>
        </div>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
                <div class="container">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Home"><i class="fas fa-home"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/RoomSearch"><i class="fas fa-search"></i> Room Search</a>
                            </li>

                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Student/My_Rooms"><i class="fas fa-door-open"></i> My Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Student/Room_Booking"><i class="fas fa-door-open"></i> Room Booking</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Student/Report"><i class="fas fa-door-open"></i> Report</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Student/Stats"><i class="fas fa-door-open"></i> Stats</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Users"><i class="fas fa-chart-bar"></i> Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Create_Users"><i class="fas fa-chart-bar"></i> Create Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Stats"><i class="fas fa-chart-bar"></i> Stats</a>
                                </li>
                            }
                            @if (User.IsInRole("Proffessor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Proffessor/My_Rooms"><i class="fas fa-door-open"></i> My Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Proffessor/Room_Booking"><i class="fas fa-door-open"></i> Room Booking</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Proffessor/Report"><i class="fas fa-door-open"></i> Report</a>
                                </li>
                            }
                            @if (User.IsInRole("TA"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/TA/MyRooms"><i class="fas fa-door-open"></i> My Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/TA/Room_Booking"><i class="fas fa-door-open"></i> Room Booking</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/TA/Report"><i class="fas fa-door-open"></i> Report</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/TA/Stats"><i class="fas fa-door-open"></i> Stats</a>
                                </li>
                            }
                            @if (User.IsInRole("RoomSevicesTeam"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/RoomSevicesTeam/Reports"><i class="fas fa-door-open"></i> Reports</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/RoomSevicesTeam/Quotas"><i class="fas fa-door-open"></i> Quotas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/RoomSevicesTeam/Daily_Cleaning"><i class="fas fa-door-open"></i> Daily Cleaning</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/RoomSevicesTeam/Cleaning_Requests"><i class="fas fa-door-open"></i> Cleaning Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/RoomSevicesTeam/Rooms_Condition"><i class="fas fa-door-open"></i> Rooms Condition</a>
                                </li>
                            }
                            @if (User.IsInRole("CleaningStaff"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/CleaningStaff/Cleaning_Requests"><i class="fas fa-door-open"></i> Cleaning Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/CleaningStaff/Daily_Cleaning"><i class="fas fa-door-open"></i> Daily Cleaning</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/CleaningStaff/Supplies"><i class="fas fa-door-open"></i> Supplies</a>
                                </li>
                            }
                            @if (User.IsInRole("Registrar"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Registrar/Courses"><i class="fas fa-door-open"></i> Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Registrar/AddCourse"><i class="fas fa-door-open"></i> Add Course</a>
                                </li>
                            }

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item ms-auto">
                                    <a class="nav-link text-danger" asp-page="/Logout"><i class="fas fa-sign-out-alt"></i> Sign out</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
    </header>
    }
    @RenderSection("HideNavBar", required: false)

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>

<style>
.logo-container {
    padding: 10px 0 0 20px;
}
.logo {
    height: 60px;
    width: auto;
    }

.nav-item.ms-auto {
    margin-left: auto !important;
}

.navbar {
    background-color: #2c3e50 !important;
}

.nav-link {
    color: white !important;
    margin: 0 10px;
}

    .nav-link:hover {
            opacity: 0.8;
            color: #f39c12 !important;
    }

.navbar-brand {
    font-weight: bold;
}
</style>
</html>


