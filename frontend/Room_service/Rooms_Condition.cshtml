@page
@model Project.Pages.RoomServicesTeam.Rooms_ConditionModel
@{
    ViewData["Title"] = "Rooms Condition";
    ViewData["CustomNavbar"] = "RoomsCondition";
}



<div class="container mt-5">
    <h3 class="mb-4">Rooms Condition</h3>

    <!-- Rooms Condition Table -->
    <table class="table table-bordered">
        <thead class="table-info">
            <tr>
                <th>Room ID</th>
                <th>Condition</th>
            </tr>
        </thead>
        <tbody>
            @* Example data loop *@
            @foreach (var room in Model.RoomCondition)
            {
                <tr>
                    <td>@room.RoomId</td>
                    <td>@room.Condition</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Room Selection and Change Condition -->
    <div class="mt-4">
        <h5>Checking progress</h5>
        <form method="post">
            <div class="d-flex align-items-center">
                <label for="RoomId" class="me-2">Room</label>
                <select name="RoomId" id="RoomId" class="form-select w-25 me-3">
                    @foreach (var room in Model.AvailableRooms)
                    {
                        <option value="@room">@room</option>
                    }
                </select>

                <select name="NewCondition" class="form-select w-25 me-3">
                    <option value="Open">Open</option>
                    <option value="Close">Close</option>
                </select>

                <button type="submit" class="btn btn-primary">Change Condition</button>
            </div>
        </form>
    </div>
</div>
