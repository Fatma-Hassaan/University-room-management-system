
@page
@model Project.Pages.RoomServicesTeam.ReportsModel
@{
    ViewData["Title"] = "Reports";
    ViewData["CustomNavbar"] = "RoomSearch";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Management System - Reports</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>


<!-- Main Content -->
<div class="container mt-5">
    <h3 class="mb-4">Reports</h3>

    <!-- Reports Table -->
    <table class="table table-bordered">
        <thead class="table-success">
            <tr>
                <th>Report #</th>
                <th>Room ID</th>
                <th>Complaint</th>
                <th>User ID</th>
                <th>Time of Request</th>
                <th>Condition</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Report 1</td>
                <td>F004</td>
                <td>Projector not working</td>
                <td>20202</td>
                <td>12:00</td>
                <td>Solved</td>
            </tr>
            <tr>
                <td>Report 2</td>
                <td>S004</td>
                <td>Light flickering</td>
                <td>20200</td>
                <td>04:00</td>
                <td>Unsolved</td>
            </tr>
            <tr>
                <td>Report 3</td>
                <td>S013 d</td>
                <td>Broken desk</td>
                <td>19150</td>
                <td>11:00</td>
                <td>In Progress</td>
            </tr>
            <tr>
                <td>Report 4</td>
                <td>S010 e</td>
                <td>Window stuck</td>
                <td>19151</td>
                <td>13:00</td>
                <td>Unsolved</td>
            </tr>
        </tbody>
    </table>

    <!-- Condition Update Section -->
    <div class="mt-4">
        <h5>Update Report Condition</h5>
        <div class="d-flex align-items-center">
            <label for="roomSelect" class="me-2">Room</label>
            <select id="roomSelect" class="form-select w-25">
                <option value="F004">F004</option>
                <option value="S004">S004</option>
            </select>
            <label for="conditionSelect" class="ms-3 me-2">Condition</label>
            <select id="conditionSelect" class="form-select w-25">
                <option value="In Progress">In Progress</option>
                <option value="Solved">Solved</option>
                <option value="Unsolved">Unsolved</option>
            </select>
            <button class="btn btn-primary ms-3">Set</button>
        </div>
    </div>
</div>

<!-- Bootstrap JS and custom dropdown logic -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var dropdownToggle = document.getElementById('navbarDropdown');
        var dropdownMenu = document.querySelector('.dropdown-menu');
        
        dropdownToggle.addEventListener('click', function (event) {
            event.preventDefault();
            dropdownMenu.classList.toggle('show');
        });
    });
</script>

</body>
</html>
