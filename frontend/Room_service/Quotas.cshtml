@page
@model Project.Pages.RoomServicesTeam.QuotasModel
@{
    ViewData["Title"] = "Quota Requests";
    ViewData["CustomNavbar"] = "RoomSearch";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Management System - Quota Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>


<!-- Main Content -->
<div class="container mt-5">
    <h3 class="mb-4">Quota Requests</h3>

    <!-- Quota Table -->
    <table class="table table-bordered">
        <thead class="table-success">
            <tr>
                <th>Request #</th>
                <th>User ID</th>
                <th>User Type</th>
                <th>Number of Extra Hours</th>
                <th>Reason</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Request 1</td>
                <td>20202</td>
                <td>Student</td>
                <td>1</td>
                <td>Needs to finish lab</td>
            </tr>
            <tr>
                <td>Request 2</td>
                <td>20200</td>
                <td>JTA</td>
                <td>3</td>
                <td>Prepare session</td>
            </tr>
            <tr>
                <td>Request 3</td>
                <td>19150</td>
                <td>TA</td>
                <td>5</td>
                <td>Review student work</td>
            </tr>
            <tr>
                <td>Request 4</td>
                <td>19151</td>
                <td>Student</td>
                <td>2</td>
                <td>Exam study</td>
            </tr>
        </tbody>
    </table>

    <!-- Approval Section -->
    <div class="mt-4">
        <h5>Checking Progress</h5>
        <div class="d-flex align-items-center">
            <label for="userSelect" class="me-2">User ID</label>
            <select id="userSelect" class="form-select w-25">
                <option value="20202">20202</option>
                <option value="20200">20200</option>
                <option value="19150">19150</option>
                <option value="19151">19151</option>
            </select>
            <button class="btn btn-success ms-3">Approve</button>
            <button class="btn btn-danger ms-2">Reject</button>
        </div>
    </div>
</div>

<!-- Bootstrap JS and dropdown logic -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var dropdownToggle = document.getElementById('navbarDropdown');
        var dropdownMenu = document.querySelector('.dropdown-menu');

        dropdownToggle.addEventListener('click', function (event) {
            event.preventDefault();
            dropdownMenu.classList.toggle('show');
        });
    });
</script>

</body>
</html>
