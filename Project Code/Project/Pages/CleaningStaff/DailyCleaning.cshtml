@page
@model Project.Pages.CleaningStaff.Daily_CleaningModel
@{
    ViewData["Title"] = "DailyCleaning";

}
<!-- Main Content Section -->
<div class="container mt-5">
    <h3 class="mb-4">Daily Cleaning</h3>

    <!-- Table to display room conditions -->
    <table class="table table-bordered">
        <thead class="table-success">
            <tr>
                <th>Room ID</th>
                <th>Condition</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>F004</td>
                <td>Done</td>
            </tr>
            <tr>
                <td>S004</td>
                <td>Done</td>
            </tr>
            <tr>
                <td>S013 d</td>
                <td>In Progress</td>
            </tr>
            <tr>
                <td>S010 e</td>
                <td>Undone</td>
            </tr>
        </tbody>
    </table>

    <!-- Room Condition Progress Section -->
    <div class="mt-4">
        <h5>Checking Progress</h5>
        <div class="d-flex align-items-center">
            <label for="roomSelect" class="me-2">Room</label>
            <select id="roomSelect" class="form-select w-25">
                <option value="F004">F004</option>
                <option value="S004">S004</option>
            </select>
            <label for="conditionSelect" class="ms-3 me-2">Condition</label>
            <select id="conditionSelect" class="form-select w-25">
                <option value="Undone">Undone</option>
                <option value="In Progress">In Progress</option>
                <option value="Done">Done</option>
            </select>
            <button class="btn btn-primary ms-3">Set</button>
        </div>
    </div>
</div>

