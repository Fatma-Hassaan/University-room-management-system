@page
@model Project.Pages.CleaningStaff.Daily_CleaningModel
@{
    ViewData["Title"] = "Daily Cleaning";
    ViewData["CustomNavbar"] = "RoomSearch";
}

<div class="container mt-5">
    <h3 class="mb-4">Daily Cleaning</h3>

    <!-- Table to display room conditions -->
    <table class="table table-bordered">
        <thead class="table-success">
        <tr>
            <th>Room ID</th>
            <th>Condition</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.RoomCleaningTable != null && Model.RoomCleaningTable.Rows.Count > 0)
        {
            foreach (System.Data.DataRow row in Model.RoomCleaningTable.Rows)
            {
                <tr>
                    <td>@row["RoomID"]</td>
                    <td>@row["Condition"]</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">No cleaning data found.</td>
            </tr>
        }
        </tbody>
    </table>
</div>