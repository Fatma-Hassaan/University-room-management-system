@page
@model Project.Pages.RoomServicesTeam.Rooms_ConditionModel
@{
    ViewData["Title"] = "Rooms Condition";
}

<div class="container mt-5">
    <h3 class="mb-4">Rooms Condition</h3>

    <!-- Room Condition Table -->
    <table class="table table-bordered">
        <thead class="table-success">
        <tr>
            <th>Room ID</th>
            <th>Condition</th>
        </tr>
        </thead>
        <tbody>
        @foreach (System.Data.DataRow row in Model.RoomsTable.Rows)
        {
            <tr>
                <td>@row["RoomID"]</td>
                <td>@row["Condition"]</td>
            </tr>
        }
        </tbody>
    </table>

    <!-- Change Condition Section -->
    <div class="mt-4">
        <h5>Checking Progress</h5>
        <form method="post" asp-page-handler="Toggle">
            <div class="d-flex align-items-center">
                <label for="RoomId" class="me-2">Room</label>
                <select asp-for="RoomId" class="form-select w-25 me-3">
                    @foreach (System.Data.DataRow row in Model.RoomsTable.Rows)
                    {
                        <option value="@row["RoomID"]">@row["RoomID"]</option>
                    }
                </select>
                <button type="submit" class="btn btn-primary">Change Condition</button>
            </div>
        </form>
    </div>
</div>