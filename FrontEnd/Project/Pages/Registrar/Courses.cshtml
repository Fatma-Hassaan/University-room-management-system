@page
@model Project.Pages.Registrar.CoursesModel
@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h1 class="mb-4">Courses</h1>

    <div class="row">
        @foreach (System.Data.DataRow row in Model.DT.Rows)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Course Name:</label>
                            <input type="text" class="form-control"
                                   value="@row["Name"]" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Professor:</label>
                            <input type="text" class="form-control"
                                   value="@(row["professor_name"] == DBNull.Value ? "Not assigned" : row["professor_name"])"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">TA:</label>
                            <input type="text" class="form-control"
                                   value="@(row["ta_name"] == DBNull.Value ? "Not assigned" : row["ta_name"])"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">JTA:</label>
                            <input type="text" class="form-control"
                                   value="@(row["jta_name"] == DBNull.Value ? "Not assigned" : row["jta_name"])"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Number of Students:</label>
                            <input type="text" class="form-control"
                                   value="@row["Student_Count"]" readonly />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-3">
        <a asp-page="/Registrar/AddCourse" class="btn btn-primary" style="background-color:#2c3e50;">
            <i class="fas fa-plus me-2"></i>Add New Course
        </a>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        color: #2c3e50;
    }

    .form-control {
        border-radius: 5px;
        background-color: #f8f9fa;
    }

        .form-control[readonly] {
            background-color: #ffffff;
            border: 1px solid #ced4da;
        }
</style>

