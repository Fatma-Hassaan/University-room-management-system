@page
@model Project.Pages.CleaningStaff.Daily_CleaningModel
@{
    ViewData["Title"] = "DailyCleaning";
}

<!-- Main Content Section -->
<div class="container mt-5">
    <h3 class="mb-4">Daily Cleaning</h3>

    <!-- Table to display room conditions -->
    <table class="table table-bordered">
        <thead class="table-success">
        <tr>
            <th>Room ID</th>
            <th>Condition</th>
        </tr>
        </thead>
        <tbody>
        @foreach (System.Data.DataRow row in Model.DailyStatuses.Rows)
        {
            <tr>
                <td>@row["RoomID"]</td>
                <td>@row["Condition"]</td>
            </tr>
        }
        </tbody>
    </table>

    <!-- Room Condition Progress Section -->
    <form method="post" class="mt-4">
        <h5>Checking Progress</h5>
        <div class="d-flex align-items-center">
            <label asp-for="SelectedRoom" class="me-2">Room</label>
            <select asp-for="SelectedRoom" class="form-select w-25">
                @foreach (System.Data.DataRow row in Model.DailyStatuses.Rows)
                {
                    <option value="@row["RoomID"]">@row["RoomID"]</option>
                }
            </select>

            <label asp-for="SelectedCondition" class="ms-3 me-2">Condition</label>
            <select asp-for="SelectedCondition" class="form-select w-25">
                <option>Undone</option>
                <option>In Progress</option>
                <option>Done</option>
            </select>

            <button type="submit" class="btn btn-primary ms-3">Set</button>
        </div>
    </form>
</div>