@page
@model Project.Pages.Registrar.AddCourseModel
@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h1 class="mb-4">Courses</h1>

    <!-- Course Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="post">
                <div class="row g-3">
                    <!-- First Row -->
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Course Code</label>
                        <input type="text" asp-for="Input.CourseCode" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Course Name</label>
                        <input type="text" asp-for="Input.CourseName" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Professor</label>
                        <input type="text" asp-for="Input.Professor" class="form-control" required>
                    </div>

                    <!-- Second Row -->
                    <div class="col-md-4">
                        <label class="form-label fw-bold">TAs IDs</label>
                        <input type="text" asp-for="Input.TAsIDs" class="form-control" placeholder="Comma separated IDs">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">JTAs IDs</label>
                        <input type="text" asp-for="Input.JTAsIDs" class="form-control" placeholder="Comma separated IDs">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Students IDs</label>
                        <input type="text" asp-for="Input.StudentsIDs" class="form-control" placeholder="Comma separated IDs">
                    </div>

                    <!-- Third Row - Lecture Details -->
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Lecture Room</label>
                        <input type="text" asp-for="Input.LectureRoom" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Lecture Day</label>
                        <select asp-for="Input.LectureDay" class="form-select">
                            <option value="">Select Day</option>
                            <option value="Sunday">Sunday</option>
                            <option value="Monday">Monday</option>
                            <option value="Tuesday">Tuesday</option>
                            <option value="Wednesday">Wednesday</option>
                            <option value="Thursday">Thursday</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Lecture Hour</label>
                        <input type="time" asp-for="Input.LectureHour" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Lecture Duration</label>
                        <input type="number" asp-for="Input.LectureDuration" class="form-control" placeholder="Minutes">
                    </div>

                    <!-- Fourth Row - Tutorial Details -->
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Tutorial Room</label>
                        <input type="text" asp-for="Input.TutorialRoom" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Tutorial Day</label>
                        <select asp-for="Input.TutorialDay" class="form-select">
                            <option value="">Select Day</option>
                            <option value="Sunday">Sunday</option>
                            <option value="Monday">Monday</option>
                            <option value="Tuesday">Tuesday</option>
                            <option value="Wednesday">Wednesday</option>
                            <option value="Thursday">Thursday</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Tutorial Hour</label>
                        <input type="time" asp-for="Input.TutorialHour" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Tutorial Duration</label>
                        <input type="number" asp-for="Input.TutorialDuration" class="form-control" placeholder="Minutes">
                    </div>

                    <!-- Add Button -->
                    <div class="col-12 mt-3">
                        <button type="submit" class="btn btn-primary" style="background-color:#2c3e50;">
                            <i class="fas fa-plus me-2"></i>Add Course
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Existing Courses Table -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Existing Courses</h5>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Course Code</th>
                            <th>Course Name</th>
                            <th>Professor</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i < Model.DT.Rows.Count; i++)
                        {
                            <tr>
                                @for (int j = 0; j < Model.DT.Columns.Count; j++)
                                {
                                    <td>@Model.DT.Rows[i][j]</td>
                                }
                                <td>
                                    <form method="post" asp-page-handler="DeleteCourse" onsubmit="return confirm('Are you sure you want to delete this course?');">
                                        <input type="hidden" name="Course_Code" value="@Model.DT.Rows[i]["Course_Code"]" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }
    .form-label {
        color: #2c3e50;
        font-weight: 500;
    }
    .form-control, .form-select {
        border-radius: 5px;
        background-color: #f8f9fa;
    }
    .table th {
        white-space: nowrap;
        background-color: #2c3e50;
        color: white;
    }
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>