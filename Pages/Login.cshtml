@page
@model Project.Pages.LoginModel
@{
    ViewData["Title"] = "Log-in";
    Layout = "_Layout";

}
@section HideNavBar {
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <div class="text-center">
            <div class="logo-container" style="background-color: #2c3e50; padding: 20px 0 30px 0; margin: -1.5rem -1.5rem 1.5rem -1.5rem; border-radius: 15px 15px 0 0;">
                    <img src="~/images/uni_logo.png" class="logo" />
            </div>
        </div>
        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label" style="font-weight: bold;">Email</label>
                <input type="text" class="form-control" id="email" name="email" required asp-for="@Model.Email">
                @if (!string.IsNullOrEmpty(Model.EmailErrorMessage))
                {
                    <div class="alert p-0 m-0 border-0 text-danger">
                        @Model.EmailErrorMessage
                    </div>
                }
            </div>
            <div class="mb-4">
                <label for="password" class="form-label" style="font-weight: bold;">Password</label>
                <input type="password" class="form-control" id="password" name="password" required asp-for="@Model.Password">
                @if (!string.IsNullOrEmpty(Model.PasswordErrorMessage))
                {
                    <div class="alert p-0 m-0 border-0 text-danger">
                        @Model.PasswordErrorMessage
                    </div>
                }
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-50" style="background-color:#2c3e50;">Log in</button>
            </div>
        </form>
    </div>
</div>

<style>

        .logo {
            height: 80px;
            width: auto;
            border-radius: 7px;
    }

    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 20px;
        padding: 10px;
    }

    .btn-primary {
        border-radius: 30px;
        border-width:0; 
        padding: 10px;
        font-weight: 500;
    }
</style>