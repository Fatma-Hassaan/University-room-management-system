@page
@using System.Linq
@model Project.Pages.Student.ReportModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Report";
}

<div class="container">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>Report</h2>
        </div>
    </div>

    <!-- Report Form -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="mb-4">Room Issue Report</h3>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <form asp-action="Report" method="post">
                <div class="mb-3">
                    <label asp-for="RoomCode" class="form-label">Room Code</label>
                    <input asp-for="RoomCode" class="form-control" required>
                    <span asp-validation-for="RoomCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Complaint" class="form-label">Complaint Details</label>
                    <textarea asp-for="Complaint" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="Complaint" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-danger">Submit Report</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .navbar-nav .nav-link.active {
        font-weight: bold;
        border-bottom: 3px solid #dc3545;
    }

    textarea {
        resize: vertical;
        min-height: 120px;
    }
</style>