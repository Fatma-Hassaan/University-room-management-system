@page
@model Project.Pages.TA.Room_BookingModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Room Booking";
}
<div class="container">
    <h2>TA Room Booking</h2>

    <div class="alert alert-info">
        Remaining Quota: @Model.RemainingQuota hours
    </div>

    <form asp-action="RoomBooking">
        <div class="form-group">
            <label asp-for="RoomCode"></label>
            <input asp-for="RoomCode" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="TimeSlot"></label>
            <input asp-for="TimeSlot" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="SelectedTutorial"></label>
            <select asp-for="SelectedTutorial" class="form-control">
                @foreach (var tutorial in Model.AvailableTutorials)
                {
                    <option value="@tutorial.CourseCode">@tutorial.CourseCode</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Book Room</button>
    </form>
</div>