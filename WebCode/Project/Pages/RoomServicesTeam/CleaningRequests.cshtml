@page
@model Project.Pages.RoomServicesTeam.CleaningRequestsModel
@{
    ViewData["Title"] = "Cleaning Requests";
    ViewData["CustomNavbar"] = "RoomSearch";
}

<div class="container mt-5">
    <h3 class="mb-4">Cleaning Requests</h3>

    <!-- Cleaning Request Table -->
    <table class="table table-bordered">
        <thead class="table-success">
        <tr>
            <th>Request</th>
            <th>Room ID</th>
            <th>Time of Request</th>
            <th>Condition</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.RequestsTable.Rows.Count > 0)
        {
            int i = 1;
            foreach (System.Data.DataRow row in Model.RequestsTable.Rows)
            {
                <tr>
                    <td>Request @i</td>
                    <td>@row["RoomID"]</td>
                    <td>@Convert.ToDateTime(row["RequestTime"]).ToString("HH:mm")</td>
                    <td>@row["Condition"]</td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No cleaning requests found.</td>
            </tr>
        }
        </tbody>
    </table>

    <!-- New Request Form -->
    <form method="post" asp-page-handler="NewRequest">
        <div class="mt-4 d-flex align-items-center">
            <label for="RoomID" class="me-2">Room</label>
            <select id="RoomID" name="RoomID" class="form-select w-25 me-3">
                @foreach (var room in Model.AvailableRooms)
                {
                    <option value="@room">@room</option>
                }
            </select>
            <button type="submit" class="btn btn-primary">Request</button>
        </div>
    </form>
</div>


