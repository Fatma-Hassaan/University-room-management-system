@page
@model Project.Pages.RoomServicesTeam.ReportsModel
@{
    ViewData["Title"] = "All Reports";
}

<h2>Service Reports</h2>

@if (Model.ReportsTable.Rows.Count == 0)
{
    <p>No pending or in-progress reports found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Room ID</th>
            <th>Type</th>
            <th>Condition</th>
            <th>Request Date</th>
            <th>Request Time</th>
            <th>Requested By</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (System.Data.DataRow row in Model.ReportsTable.Rows)
        {
            <tr>
                <td>@row["RoomID"]</td>
                <td>@row["Type"]</td>
                <td>@row["Condition"]</td>
                <td>@Convert.ToDateTime(row["RequestDate"]).ToShortDateString()</td>
                <td>@Convert.ToDateTime(row["RequestTime"]).ToString("hh\\:mm")</td>
                <td>@row["RequestorName"]</td>
                <td>
                    <form method="post" asp-page-handler="MarkAs" class="d-inline">
                        <input type="hidden" name="reportId" value="@row["ID"]" />
                        <input type="hidden" name="status" value="In Progress" />
                        <button class="btn btn-warning btn-sm me-2">In Progress</button>
                    </form>
                    <form method="post" asp-page-handler="MarkAs" class="d-inline">
                        <input type="hidden" name="reportId" value="@row["ID"]" />
                        <input type="hidden" name="status" value="Done" />
                        <button class="btn btn-success btn-sm">Done</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}